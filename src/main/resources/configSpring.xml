<?xml version="1.0" encoding="UTF-8" ?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="eventDao" class="dao.EventDao"/>
    <bean id="ticketDao" class="dao.TicketDao"/>
    <bean id="userDao" class="dao.UserDao"/>

    <bean id="eventService" class="service.EventService">
        <constructor-arg index="0" ref="eventDao"/>
    </bean>
    <bean id="ticketService" class="service.TicketService">
        <constructor-arg index="0" ref="ticketDao"/>
    </bean>
    <bean id="userService" class="service.UserService">
        <constructor-arg index="0" ref="userDao"/>
    </bean>

    <bean id="facadeImpl" class="facade.BookingFacadeImpl">
        <constructor-arg index="0" ref="eventService"/>
        <constructor-arg index="1" ref="ticketService"/>
        <constructor-arg index="2" ref="userService"/>
    </bean>

</beans>